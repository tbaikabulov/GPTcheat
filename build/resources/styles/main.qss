/* Основные стили */
QMainWindow {
    background-color: #f5f5f5;
}

/* Кнопки */
QPushButton {
    background-color: #2196F3;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 14px;
    min-width: 100px;
}

QPushButton:hover {
    background-color: #1976D2;
}

QPushButton:pressed {
    background-color: #1565C0;
}

/* Текстовые поля */
QTextEdit {
    background-color: white;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    padding: 8px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    line-height: 1.5;
}

QTextEdit:focus {
    border: 1px solid #2196F3;
}

/* Метки */
QLabel {
    color: #333;
    font-size: 14px;
}

/* Разделитель */
QSplitter::handle {
    background-color: #e0e0e0;
}

QSplitter::handle:horizontal {
    width: 1px;
}

/* Скроллбары */
QScrollBar:vertical {
    border: none;
    background: #f5f5f5;
    width: 10px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: #bdbdbd;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::handle:vertical:hover {
    background: #9e9e9e;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

/* Блоки кода */
QWidget[objectName="codeBlock"] {
    background-color: #23241f;
    border-radius: 4px;
    padding: 8px;
}

/* Статус */
QLabel#status_label {
    font-size: 13px;
    padding: 4px 8px;
    border-radius: 4px;
}

QLabel#status_label[status="recording"] {
    background-color: #ffebee;
    color: #c62828;
}

QLabel#status_label[status="ready"] {
    background-color: #e8f5e9;
    color: #2e7d32;
}

/* Визуализация волн */
QWidget#wave_visualizer {
    background-color: #fafafa;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
} 